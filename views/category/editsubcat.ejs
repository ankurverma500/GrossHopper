<% layout('../layout') -%>
<div class="content-page edit-page">
   <!-- Start content -->
   <div class="content">
      <div class="container">
         <div class="row">
            <div class="col-xs-12">
               <div class="page-title-box">
                  <h4 class="page-title">Edit Category</h4>  
				  <a href="/admin/category/list" class="btn btn-success btn-xs go-btn pull-right">Go Back</a>
                  <div class="clearfix"></div>
               </div>
            </div>
         </div>
         <!-- end row -->
		 <% if ( error.length > 0 ) { %>
		<div class="alert alert-danger fade in alert-dismissible">
			<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
			<i></i><i class="fa fa-exclamation-triangle"></i> <%= error %>
		</div>
		<% } %>
		<% if ( success.length > 0 ) { %>
		<div class="alert alert-success fade in alert-dismissible" style="margin-top:18px;">
			<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a><i class="fa fa-check"></i> <%= success %>
		</div>
		<% } %>
         <div class="row">
            <div class="col-sm-12">
               <div class="card-box">                 
                  <div class="row">
				  <form class="form-horizontal" id="edit_form" role="form" action="/admin/category/edit/<%=resultSet._id%>" method="post">
                     <div class="col-md-12">                        
					   <div class="form-group">
						  <label class="col-md-2 control-label">Category Name</label>
						  <div class="col-md-5">
							 <input type="text" name="category" id="category" class="form-control" autocomplete="off" value="<%=resultSet.category%>">
						  </div>
					   </div>
                       <div class="form-group">
						  <label class="col-md-2 control-label">Status</label>
						  <div class="col-md-5">
							 <select name="status" id="status" class="form-control">
							 <option value="1"<% if(resultSet.status == 1) { %>selected<% } %>>Active</option>
							 <option value="0"<% if(resultSet.status == 0) { %>selected<% } %>>Inactive</option>
							 </select>
						  </div>
					   </div>					   
						<div class="form-group">
						  <label class="col-md-2 control-label"></label>
						  <div class="col-md-10">
							 <button type="submit" class="btn btn-purple waves-effect waves-light">Submit</button>
						  </div>
					   </div>
                     </div>
					 <input type="hidden" name="id" value="<%=resultSet._id%>">
					 </form>
                  </div>
               </div>
            </div>
         </div>
         <!-- end row -->
      </div>
      <!-- container -->
   </div>
</div>

<script src="/admin/js/jquery.validate.min.js"></script>
<script>
$.validator.setDefaults({
	submitHandler: function() {
		document.forms["edit_form"].submit();
	}
});

$("#edit_form").validate({
	rules: {
		category: "required"
	},
	messages: {
	    category: "Please enter the category name!"
	}
});

setTimeout(function(){ 
	$(".alert").fadeOut('slow'); 
}, 3000);
</script>