<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta name="description" content="online artists, make a money">
      <meta name="author" content="eforg agency">
      <link rel="shortcut icon" href="/admin/images/favicon.ico">
      <title>Admin Login - Grasshopper</title>
      <link href="/admin/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
      <link href="/admin/css/core.css" rel="stylesheet" type="text/css" />
      <link href="/admin/css/components.css" rel="stylesheet" type="text/css" />
      <link href="/admin/css/icons.css" rel="stylesheet" type="text/css" />
      <link href="/admin/css/pages.css" rel="stylesheet" type="text/css" />
      <link href="/admin/css/responsive.css" rel="stylesheet" type="text/css" />
	  <link href="/admin/css/common.css" rel="stylesheet" type="text/css" />
	  <script src="/admin/js/modernizr.min.js"></script>
   </head>
   <body class="bg-transparent">
      <section class="login-section">
         <div class="container-alt">
            <div class="row">
               <div class="col-sm-12">
                  <div class="wrapper-page">				    
                     <div class="m-t-40 account-pages">
					    <% if ( error.length > 0 ) { %>
						<div class="alert alert-danger fade in alert-dismissible">
							<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
							<i></i><i class="fa fa-exclamation-triangle"></i> <%= error %>
						</div>
						<% } %>
						<% if ( success.length > 0 ) { %>
						<div class="alert alert-success fade in alert-dismissible" style="margin-top:18px;">
							<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a><i class="fa fa-check"></i> <%= success %>
						</div>
						<% } %>
                        <div class="text-center account-logo-box">
                           <h2 class="text-uppercase">                              
                              <span><img src="/admin/images/logo.png" alt="" height="36"></span>
                           </h2>
                        </div>
                        <div class="account-content">
						   <form class="form-horizontal" id="login_form" role="form" action="/admin/login" method="post">  
						      <div class="form-group ">
                                 <div class="col-xs-12">
                                    <input class="form-control" type="text" name="username" id="username" required="true" placeholder="Username" autocomplete="off" <% if ( cookieUser ) { %> value="<%= cookieUser %>"<% } %>>
                                 </div>
                              </div>
                              <div class="form-group">
                                 <div class="col-xs-12">
                                    <input class="form-control" type="password" name="password" id="password" required="true" placeholder="Password" autocomplete="off" <% if ( cookiePass ) { %> value="<%= cookiePass %>"<% } %>>
                                 </div>
                              </div>
                              <div class="form-group ">
                                 <div class="col-xs-12">
                                    <div class="checkbox checkbox-success">
                                       <input name="rememberme" id="checkbox-signup" type="checkbox" checked>
                                       <label for="checkbox-signup">
                                       Remember me
                                       </label>
                                    </div>
                                 </div>
                              </div>
                              <div class="form-group account-btn text-center m-t-10">
                                 <div class="row login-btn">
                                    <button class="btn btn-success waves-effect waves-light m-l-10 btn-md" type="submit">Log In</button> <a href="forgotpass" class="text-muted"> Forgot your password?</a>
                                 </div>								 
                              </div>
                           </form>						   
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
   </body>
</html>
<script src="/admin/js/jquery.min.js"></script>
<script src="/admin/js/bootstrap.min.js"></script>
<script src="/admin/js/jquery.validate.min.js"></script>
<script>
$.validator.setDefaults({
	submitHandler: function() {
		document.forms["login_form"].submit();
	}
});

$("#login_form").validate({
	rules: {
		username: "required",
		password: "required"
	},
	messages: {
		username: "Please enter your username!",
		password: "Please enter your password!",
	}
});

setTimeout(function(){ 
	$(".alert").fadeOut('slow'); 
}, 3000);
</script>